<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.repository.BoardRepository">

    <insert id="write" flushCache="true"
        parameterType="com.project.domain.FileBoard"
        useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into t_board
            (user_id,title,content,game_id,count)
        values
            (#{user_id},#{title},#{content},#{game_id},#{count})
    </insert>

    <select id="findById">
        select
            id,
            regdate,
            title,
            count,
            content,
            game_id,
            is_file

        from
            t_board
        where
            id=#{id}
    </select>

<!-- 아직 수정중    -->

</mapper>