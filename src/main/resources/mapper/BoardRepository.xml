<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.repository.BoardRepository">
    <insert id="write" flushCache="true" parameterType="com.project.domain.Board" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into t_board
            (title,content, user_id)
        values
            (#{title},#{content},#{user.id})

    </insert>

    <sql id="SELECT_BASE">
        SELECT
            b.id,
            b.title,
            b.content,
            b.count,
            b.regdate,
            u.id,
            u.username
        from
            t_board b, t_user u
        where
            b.user_id = u.id
    </sql>

    <resultMap id="mapUser" type="com.project.domain.User">
        <result column="u.id" property="id"/>
        <result column="u.username" property="username"/>
        <result column="u.password" property="password"/>
        <result column="u.email" property="email"/>
    </resultMap>

    <resultMap id="mapBoard" type="com.project.domain.Board">
        <result column="b.id" property="id"/>
        <result column="b.title" property="title"/>
        <result column="b.content" property="content"/>
        <result column="b.count" property="count"/>
        <result column="b.regdate" property="regdate"/>
        <collection property="user" resultMap="mapUser"/>
    </resultMap>

    <select id="findById" resultMap="mapBoard">
        <include refid="SELECT_BASE"/>
        and
            b.id=#{id}
    </select>

    <select id="list" resultMap="mapBoard">
        <include refid="SELECT_BASE"/>
            order by b.id desc

    </select>

    <update id="update" flushCache="true" parameterType="com.project.domain.Board">
        update t_board
        set title=#{title}, content=#{content}
        where id=#{id}
    </update>

    <delete id="delete" flushCache="true" parameterType="com.project.domain.Board">
        delete from t_board where id =#{id}
    </delete>

    <select id="countAll" resultType="int">
        select count(*) from t_board
    </select>

    <select id="selectByPage" resultMap="mapBoard">
        <include refid="SELECT_BASE"/>
        order by b.id desc
        limit #{param1}, #{param2}
    </select>
</mapper>